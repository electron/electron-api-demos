{
  "name": "electron-demo",
  "version": "1.0.0",
  "description": "Electron interactive API demos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "semistandard --verbose | snazzy",
    "test": "mocha tests && npm run lint",
    "pack-mac": "electron-packager . 'Electron API Demos' --platform=darwin --arch=x64 --version=0.36.9 --icon=assets/app-icon/mac/app.icns --prune=true --out='../EAD-Packages'",
    "pack-win": "electron-packager . 'Electron API Demos' --platform=win32 --arch=ia32   --version=0.36.9 --icon=assets/app-icon/win/app.ico --prune=true --out='../EAD-Packages'",
    "pack-win-win": "electron-packager . Electron API Demos --platform=win32 --arch=ia32   --version=0.36.9 --icon=assets/app-icon/win/app.ico --prune=true --out=EAD-Packages",
    "pack-lin": "electron-packager . 'Electron API Demos' --platform=linux --arch=x64   --version=0.36.9 --icon=assets/app-icon/png/64.png --prune=true --out='../EAD-Packages'",
    "package": "npm run pack-mac && npm run pack-win && npm run pack-lin"
  },
  "semistandard": {
    "ignore": [
      "/assets/highlight.pack.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atom/electron-demo.git"
  },
  "keywords": [
    "Electron",
    "API",
    "demo"
  ],
  "author": "GitHub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atom/electron-demo/issues"
  },
  "homepage": "https://github.com/atom/electron-demo#readme",
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.36.9",
    "mocha": "^2.3.4",
    "semistandard": "^7.0.3",
    "snazzy": "^3.0.0",
    "spectron": "^0.36.1"
  },
  "dependencies": {
    "glob": "^6.0.4"
  }
}
